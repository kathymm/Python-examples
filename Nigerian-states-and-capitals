# Define a dictionary to store state capitals and slogans
states = {
    "Abia": ("Umuahia", "God's Own State"),
    "Adamawa": ("Yola", "Land of Beauty and Hospitality"),
    "Akwa Ibom": ("Uyo", "The Land of Promise"),
    "Anambra": ("Awka", "Light of the Nation"),
    "Bauchi": ("Bauchi", "Home of Hospitality"),
    "Bayelsa": ("Yenagoa", "The Glory of All Lands"),
    "Benue": ("Makurdi", "The Benue Valley"),
    "Borno": ("Maiduguri", "Home of Peace"),
    "Cross River": ("Calabar", "The People's Paradise"),
    "Delta": ("Asaba", "The Big Heart of the South"),
    "Ebonyi": ("Abakaliki", "Salt of the Nation"),
    "Edo": ("Benin City", "Heartbeat of the Nation"),
    "Ekiti": ("Ado Ekiti", "Land of Honour"),
    "Enugu": ("Enugu", "Coal City State"),
    "Gombe": ("Gombe", "Jewel in the Savannah"),
    "Imo": ("Owerri", "The Heart of the East"),
    "Jigawa": ("Dutse", "The New World"),
    "Kaduna": ("Kaduna", "Centre of Learning"),
    "Kano": ("Kano", "Centre of Commerce"),
    "Katsina": ("Katsina", "Home of Hospitality"),
    "Kebbi": ("Birnin Kebbi", "Land of Equity"),
    "Kogi": ("Lokoja", "Confluence State"),
    "Kwara": ("Ilorin", "State of Harmony"),
    "Lagos": ("Ikeja", "Centre of Excellence"),
    "Nasarawa": ("Lafia", "Home of Solid Minerals"),
    "Niger": ("Minna", "The Power State"),
    "Ogun": ("Abeokuta", "Gateway State"),
    "Ondo": ("Akure", "Sunshine State"),
    "Osun": ("Oshogbo", "State of the Living Spring"),
    "Oyo": ("Ibadan", "Pace Setter State"),
    "Plateau": ("Jos", "Home of Peace and Tourism"),
    "Rivers": ("Port Harcourt", "Treasure Base of the Nation"),
    "Sokoto": ("Sokoto", "Seat of the Caliphate"),
    "Taraba": ("Jalingo", "Nature's Gift to the Nation"),
    "Yobe": ("Damaturu", "Peace and Tourism"),
    "Zamfara": ("Gusau", "Home of Hospitality")
}

# Get user input for the state name
user_state = input("Enter a Nigerian state name: ").title()  # Convert to title case

# Check if the state exists in the dictionary
if user_state in states:
    capital, slogan = states[user_state]  # Unpack values from dictionary
    print(f"The capital of {user_state} is {capital}.")
    print(f"The state slogan of {user_state} is '{slogan}'.")
else:
    print(f"This is not a state in Nigeria.")
